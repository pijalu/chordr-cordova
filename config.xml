<?xml version='1.0' encoding='utf-8'?>
<widget id="net.muaddib.chordr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>chordr</name>
    <icon src="icon.png" />
    <description>
			chordr is a (basic) tool to help guitarists with some aspects of music theory. 
    </description>
    <author email="pierre.poissinger@gmail.com" href="http://chordr.muaddib.net">
			Pierre Poissinger
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
